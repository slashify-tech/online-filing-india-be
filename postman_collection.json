							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"contact\": \"9876543211\",\n  \"contactOTP\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/signup",
							"host": [
								"{{baseUrl}}"
